@using BeerAppAPI.Models
@model IList<Brewery>
@{
    ViewData["Title"] = "Brewery List";
}
<div class="container">    
    <div class="row">
        <form class="form-horizontal" action="@Url.Action("Add")">
            <fieldset>
                <legend>Add a brewery</legend>
                <div class="form-group">
                    <label class="col-sm-2" for="name">Name</label>
                    <div class="col-sm-10">
                        <input class="form-control" name="name" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2" for="website">Website</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="url" name="website" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2" for="address">Address</label>
                    <div class="col-sm-10">
                        <input class="form-control" name="address" />
                    </div>
                </div>
                <div class="form-group">
                    <button class="col-sm-offset-2 col-sm-2 btn btn-default" type="submit">Add</button>
                </div>
            </fieldset>
        </form>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Website</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-action="Remove" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a></td>
                        <td><a asp-action="Detail" asp-route-id="@item.Id">@item.Name</a></td>
                        <td><a href="@item.Website" target="_blank">@item.Website</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>